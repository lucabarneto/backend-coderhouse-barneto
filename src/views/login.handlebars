<main>
  <section class="auth">
    <h1>Iniciar sesión</h1>
    <button class="external-app-btn" id="github">
      <p>Iniciar sesión con Github</p>
      <i class="fa-brands fa-github"></i></button>
    <form id="login-form" method="post" action="/api/sessions/login">
      <label for="login-form__email">Email</label>
      <input
        class="input"
        id="login-form__email"
        type="email"
        name="email"
        placeholder="Escribe aquí..."
        required
      />
      <label for="login-form__password">Contraseña</label>
      <input
        class="input"
        id="login-form__password"
        type="password"
        name="password"
        placeholder="Escribe aquí..."
        required
      />
      <input
        type="submit"
        class="primary-button submit"
        value="Iniciar sesión"
      />
    </form>
    <button class="secondary-button" id="register">Registrarse</button>
  </section>
  <script src="/js/index.js"></script>
</main>