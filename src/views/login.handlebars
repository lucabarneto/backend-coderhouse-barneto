<main>
  <section>
    <h1>Iniciar sesión</h1>
    <form
      id="login-form"
      method="post"
      action="http://localhost:8080/api/sessions/login"
    >
      <input
        id="login-form__email"
        type="email"
        name="email"
        placeholder="email"
        required
      />
      <input
        id="login-form__password"
        type="password"
        name="password"
        placeholder="Contraseña"
        required
      />
      <input type="submit" value="Iniciar sesión" />
    </form>

    <div>
      <div>
        ¿No tienes un usuario?
        <a href="http://localhost:8080/register"> Registrate!</a>
      </div>
      <br />
      <div>
        <a href="http://localhost:8080/api/sessions/github">Inicia sesión con
          Github</a>
      </div>
    </div>

  </section>
  <script src="/js/index.js"></script>
</main>