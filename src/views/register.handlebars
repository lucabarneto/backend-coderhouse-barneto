<main>
  <section class="auth">
    <h1>Registrarse</h1>
    <form id="register-form" method="post" action="/api/sessions/register">
      <label for="register-form__firstname">Nombre</label>
      <input
        id="register-form__firstname"
        type="text"
        name="firstName"
        class="input"
        placeholder="Escribe aquí..."
        pattern="^\S[a-zA-ZáéíóúüñÁÉÍÓÚÜÑ\s]+\S$"
        required
      />
      <label for="register-form__lastname">Apellido</label>
      <input
        id="register-form__lastname"
        type="text"
        name="lastName"
        class="input"
        placeholder="Escribe aquí..."
        pattern="^\S[a-zA-ZáéíóúüñÁÉÍÓÚÜÑ\s]+\S$"
        required
      />
      <label for="register-form__email">Email</label>
      <input
        id="register-form__email"
        type="email"
        name="email"
        class="input"
        placeholder="Escribe aquí..."
        pattern="^[a-zA-ZñÑ0-9]+(\.[_a-zA-ZñÑ0-9]+)*@[a-zA-ZñÑ0-9-]+(\.[a-zA-ZñÑ0-9-]+)*(\.[a-zA-ZñÑ]{2,15})$"
        required
      />
      <label for="register-form__tel">Teléfono</label>
      <input
        id="register-form__tel"
        type="tel"
        name="tel"
        class="input"
        placeholder="Escribe aquí..."
        required
      />
      <label for="register-form__password">Constraseña</label>
      <input
        id="register-form__password"
        type="password"
        name="password"
        class="input"
        placeholder="Escribe aquí..."
        minlength="6"
        pattern="^[a-zA-ZnÑ0-9]+$"
        title="La contraseña debe tener al menos 6 caracteres, ni debe contener caracteres especiales"
        required
      />
      <input type="submit" class="primary-button submit" value="Registrarse" />
    </form>
  </section>
</main>